{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:tailwindcss/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "no-unused-vars": "error",
    "prefer-const": "error",
    "eqeqeq": "error",
    "curly": "off",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "semi": ["error", "always"],
    "indent": ["off"],
    "arrow-parens": ["error", "always"],
    "object-curly-spacing": ["error", "always"],
    "comma-dangle": ["error", "never"]
  },
  "overrides": [
    {
      "files": ["*.js, **/*.js", "**/*.cjs", "**/*.mjs"],
      "rules": {
        "no-undef": "error"
      }
    }
  ]
}
